<%#= здесь прописано отображение содержимого пользовательской корзины%>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Ваша корзина</h2>

<table>
  <% @cart.line_items.each do |item| %>
  <tr>
    <td><%=button_to '-', item, method: :minus_quantity %> </td>
    <td><%=item.quantity %>&times;</td>
    <td><%=button_to '+', @line_item, method: :plus_quantity %> </td>
    <td><%=item.product.title %></td>
    <td class="item_price"><%= number_to_currency(item.total_price, 
                               :unit => 'руб', :format => "%n %u") %> </td>
    <td> <%= button_to 'Delete', item, method: :delete,
             data: { confirm: 'Are you sure to delete this item?'}%> </td>
  </tr>
  <% end %>

  <tr class="total_line">
    <td colspan="4" align='right'>Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price, 
                               :unit => 'руб', :format => "%n %u") %></td>
  </tr>  
</table> 

  <%= button_to 'Empty cart' , @cart, method: :delete, 
      data: { confirm: 'Are you sure?'} %>

<%= link_to 'Back', store_path %>